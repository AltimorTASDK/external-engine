#!/usr/bin/make -f

%:
	dh $@ --sourcedirectory=src

override_dh_auto_clean:
	cd src
	make clean
	rm -f stockfish-
	rm -f nn-*.nnue

override_dh_auto_build:
	cd src
	export CXXFLAGS="$CXXFLAGS -DNNUE_EMBEDDING_OFF"
	make -B ARCH=x86-64 EXE=stockfish-x86-64 profile-build
	make -B ARCH=x86-64-sse3-popcnt EXE=stockfish-x86-64-sse3-popcnt profile-build
	make -B ARCH=x86-64-ssse3 EXE=stockfish-x86-64-ssse3 profile-build
